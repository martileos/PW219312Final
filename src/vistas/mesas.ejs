<%- include('templates/head', {title: 'Mesas'}); %>
<body>
    <%- include('templates/menu'); %>
    <%- include('templates/header'); %>
    <main>
        <div class="row center">
            <div class="col s12 l6">
                <div class="col s12 card-panel blue darken-1">
                    <div class="row">
                        <% for (var i = 0; i < data.length; i++) { %>
                            <div class="col s12 m3">
                            <% if(!data[i].status) { %>
                                <div class="card-panel green">
                            <% } %>
                            <% if (data[i].status) { %>
                                <div class="card-panel red">
                            <% } %>
                                    <span>
                                        Mesa <%=data[i].id_mesa%>
                                    </span>
                                </div>
                            </div>
                        <%}%>
                    </div>
                </div>
                <div class="s12">
                    <div class="col s12 m3">
                        <h5 class="header">Disponible</h5>
                        <div class="card leyenda green"></div>
                    </div>
                    <div class="col s12 m3">
                        <h5 class="header">Ocupado</h5>
                        <div class="card leyenda red"></div>
                    </div>
                </div>
            </div>
            <div class="col s12 l6">
                <div class="card-panel blue darken-1">
                    <div class="row">
                        <div class="col s12 m9">
                            <div class="card">
                                <span class="card-title col s12 grey">Mesa</span>
                                <div class="card-text">
                                    <form id="mesasForm" action="#">
                                        <div class="row">
                                            <div class="col s6">
                                                <span>Num. Mesa: </span>
                                                <div class="input-field inline">
                                                    <input id="num_mesa" type="text">
                                                </div>
                                            </div>
                                            <div class="col s6">
                                                <span>Capacidad: </span>
                                                <div class="input-field inline">
                                                    <input id="capacidad" type="text">
                                                </div>
                                            </div>
                                            <div class="row col s12">
                                                <div class="col s4">
                                                    <p>Estado: </p>
                                                </div>
                                                <div class="col s4">
                                                    <p>
                                                    <label>
                                                        <input name="group1" type="radio"/>
                                                        <span>Disponible</span>
                                                    </label>
                                                    </p>
                                                </div>
                                                <div class="col s4">
                                                    <p>
                                                    <label>
                                                        <input name="group1" type="radio"/>
                                                        <span>Ocupado</span>
                                                    </label>
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="col s12 m3">
                            <a class="btn-small btn-mesa green waves-effect waves-light modal-trigger" href="#modalMesas">Agregar mesa</a>
                            <a class="btn-small btn-mesa blue lighten-1 waves-effect waves-light modal-trigger" href="#modalMesas">Editar mesa</a>
                            <a class="btn-small btn-mesa red waves-effect waves-light modal-trigger" href="#modalEliminar">eliminar mesa</a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s12">
                            <div class="card">
                                <span class="card-title col s12 grey">Ordenes</span>
                                <div class="card-text">
                                    <div class="row">
                                        <div class="col s12 m6">
                                            <table>
                                                <caption>Platillos</caption>
                                                <thead>
                                                    <tr>
                                                        <th>Cantidad</th>
                                                        <th>Descripción</th>
                                                        <th>Precio</th>
                                                    </tr>
                                                </thead>
                                                
                                                <tbody>

                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col s12 m6">
                                            <table>
                                                <caption>Bebidas</caption>
                                                <thead>
                                                    <tr>
                                                        <th>Cantidad</th>
                                                        <th>Descripción</th>
                                                        <th>Precio</th>
                                                    </tr>
                                                </thead>
                                                <tbody>

                                                </tbody>
                                            </table>
                                        </div>
                                        <div class="col s12 m6">
                                            <span>Total de mesa</span>
                                            <div class="input-field inline">
                                                <input id="Total" type="text">
                                            </div>
                                            <a href="#" class="btn-small blue">Imprimir Ticket</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('modals/modalMesas'); %>
    <%- include('modals/modalEliminar'); %>
</main>
<%- include('templates/scripts'); %>
</body>
</html>