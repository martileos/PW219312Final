<%- include('templates/head', {title: 'Clientes'}); %>
<body>
    <%- include('templates/menu'); %>
    <%- include('templates/header'); %>
    <main>
        <div class="row center">
            <div class="col s12">
                <div class="card-panel blue darken-1">
                    <div class="row">
                        <div class="col s12">
                            <div class="card">
                                <span class="card-title col s12 grey">Clientes</span>
                                <div class="card-text">
                                    <table>
                                        <thead>
                                            <tr>
                                                <th>Nombre</th>
                                                <th>Apellido</th>
                                                <th>Sexo</th>
                                                <th>Domicilio</th>
                                                <th>Tel√©fono</th>
                                                <th>RFC</th>
                                                <th>Acciones</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for(var i = 0; i < data.length; i++) {%>
                                                <tr>
                                                    <td><%=data[i].nombres%></td>
                                                    <td><%=data[i].apellidos%></td>
                                                    <td><%=data[i].sexo%></td>
                                                    <td><%=data[i].domicilio%></td>
                                                    <td><%=data[i].noTelefono%></td>
                                                    <td><%=data[i].rfc%></td>
                                                    <td>
                                                        <a class="btn-small btn-mesa blue lighten-1 modal-trigger" href="#modalClientes">Editar</a>
                                                        <a class="btn-small btn-mesa red modal-trigger" href="#modalEliminar">Eliminar</a>
                                                    </td>
                                                </tr>
                                                <% } %>
                                            </tbody>
                                        </table>
                                        <br>
                                        <a class="waves-effect waves-light btn green modal-trigger" href="#modalClientes">Agregar Cliente</a>
                                        <br></br>   
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%- include('modals/modalClientes'); %>
        <%- include('modals/modalEliminar'); %>
    </main>
    <%- include('templates/scripts'); %>
</body>
</html>